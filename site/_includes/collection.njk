---
layout: "base.njk"
eleventyComputed:
  tag: "{{ page.fileSlug }}"
  title: "{{ tag | capitalize }}"
  rssUrl: "
  {%- if tag == 'posts' -%}
  /feed.xml
  {%- else -%}
    {%- if tag != 'music' -%}
      /feeds/{{tag}}
    {%- endif -%}
  {%- endif -%}
  "
---

{%- from "components/collectionList.njk" import collectionList with context -%}
<main>
  <section data-pagefind-body>
    {{ content | safe }}
  </section>
  {% if collections[tag] %}
    {% if tag === "posts" %}
      {% include "-taglist.njk" %}
    {% endif %}
    {{ collectionList(tag) }}
  {% endif %}
</main>
